{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "useDefineForClassFields": true,
    "skipLibCheck": true,

    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "moduleDetection": "force",

    "types": ["vite/client"],

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}
